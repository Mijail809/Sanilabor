
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Consultas</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Consultas</a></li>
                    <li class="breadcrumb-item active">Crear Consultas</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row mt-4">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-10">
                                Crear Consulta
                            </div>
                            @*<div class="col-md-2">
                                <button class="btn btn-primary btn-sm float-right" onclick="GuardarCambios()">
                                    <i class="fas fa-check" aria-hidden="true"></i> Guardar Cambios
                                </button>
                            </div>*@
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="form-group">
                                    <label for="cboEmpleado">Empleado</label>
                                    <select id="cboEmpleado" class="form-control"></select>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label class="bg"></label>
                                    <button type="button" class="btn btn-success btn-block mt-1" id="btnBuscar" onclick="Buscar()">Buscar</button>
                                </div>

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-responsive">
                                    <table id="tbdata" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Nombre Completo</th>
                                                <th>FechaConsulta</th>
                                                <th>MotivoConsulta</th>
                                                <th>EnfermedadActual</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>

    </div>
</section>





@section scripts{
    <script src="@Url.Content("~/Scripts/Controllers/CrearConsulta.js")" type="text/javascript"></script>
}

